{
  "name": "run-if-diff",
  "version": "2.0.0",
  "description": "Run a command if files have changed.",
  "keywords": [
    "git",
    "diff",
    "exec",
    "run",
    "changed",
    "modified",
    "file",
    "run-if-diff",
    "exit-if-diff",
    "run-if-changed"
  ],
  "repository": "jameslnewell/run-if-diff",
  "main": "lib/api/index.js",
  "bin": {
    "run-if-diff": "lib/cli/run-if-diff.js",
    "exit-if-diff": "lib/cli/exit-if-diff.js"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@types/debug": "^0.0.31",
    "@types/micromatch": "^3.1.0",
    "@types/yargs": "^12.0.1",
    "debug": "^4.1.0",
    "micromatch": "^3.1.10",
    "yargs": "^12.0.2"
  },
  "devDependencies": {
    "@tradie/node-scripts": "^1.2.1",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.2",
    "fs-extra": "^7.0.1",
    "husky": "^1.1.0",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3"
  },
  "scripts": {
    "clean": "node-scripts clean",
    "build": "node-scripts build",
    "watch": "node-scripts build --watch",
    "test": "node-scripts test",
    "example": "node-scripts example",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,md,json}": [
      "prettier --write --single-quote --no-bracket-spacing",
      "git add"
    ]
  },
  "license": "MIT"
}
